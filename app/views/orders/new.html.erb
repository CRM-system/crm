<div class="ui form">
  <div class="fields">
    <%= form_with url: product_orders_path, scope: :order, local: true do |f| %>
      <% if @order %>
        <% if @order.errors.any? %>
          <div class="errors">
            Total errors: <%= @order.errors.count %>
            <ul>
              <% @order.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      <% end %>

      <div class="field">
        <%= f.text_field :client_name, placeholder: 'Ваше имя' %><br>
      </div><br>

      <div class="field">
        <%= f.text_field :client_phone, placeholder: 'Телефон' %><br>
      </div><br>

      <div class="field">
        <%= f.text_field :client_email, placeholder: 'Почта' %><br>
      </div><br>

      <div>
        <%= f.submit "Отправить",class:"ui teal button" %>
      </div>
    <% end %>
  </div>
</div>
