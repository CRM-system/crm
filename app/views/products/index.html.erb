<h1>Товары</h1>
<table class="ui celled table">
	<tr>
		<th>Название</th>
		<th>Описание</th>
		<th>Цена</th>
		<th>Изображение</th>
	</tr>
	<% @products.each do |product| %>
	<tr>
		<td>
			<h3><%= link_to product.name, product_path(product) %></h3>
		</td>
		<td>
			<h3><%= product.description %></h3>
		</td>
		<td>
			<h3><%= product.price %></h3>
		</td>
		<td>
			<% if product.picture.attached? %>
		    <%= image_tag product.picture, size: 100 %>
			<% end %>
		</td>
	</tr>
	<% end %>
</table>
