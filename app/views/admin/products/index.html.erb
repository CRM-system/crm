<h1>Товары</h1>
<% if current_worker.new_product_access_is_given? %>
	<%= link_to 'Создать новый товар', new_admin_product_path, class:"ui positive basic button" %>
<% end %>

<div class="digg_pagination">
	<div class="page_info">
    	<%= page_entries_info @products %>
	</div>
	<%= will_paginate @products, :container => false %>
</div>

<table class="ui selectable celled black table", id="centred_table">
	<tr class="table_title">
		<th>Изображение</th>
		<th>Название</th>
		<th>Цена</th>
		<% if current_worker.show_product_access_is_given? %>
			<th colspan="3">Действия</th>
		<% end %>
	</tr>
	<% @products.each do |product| %>
	<tr>
		<td>
			<% if product.picture.attached? %>
				<%= link_to admin_product_path(product) do %>
		    		<%= image_tag product.picture, size: 100 %>
				<% end %>
			<% end %>
		</td>
		<% if current_worker.show_product_access_is_given? %>
			<td>
				<h3>
					<%= link_to product.name, admin_product_path(product) %>
				</h3>
			</td>
		<% else %>
			<td>
				<h3>
					<%= product.name %>
				</h3>
			</td>
		<% end %>
		<td>
			<strong>
				<%= product.price %>
			</strong>
		</td>
		<td>
			<% if current_worker.destroy_product_access_is_given? %>
				<%= link_to admin_product_path(product), data: { confirm: 'Вы уверены?' },method: :delete do %>
					<i class="huge trash alternate outline icon"></i></br></br>
				<% end %>
				<%= link_to "Создать копию", admin_duplicate_path(product), data: { confirm: 'Вы уверены?' },method: :post,class:"ui orange button" %>
			<% end %>
		</td>
	</tr>
	<% end %>
</table>
