<h1>Сотрудники</h1>
<table border="1">
	<tr>
		<th>Email</th>
		<th>Nickname</th>
		<th>Role</th>
		<th colspan="3">Action</th>
	</tr>
	<% @workers.each do |worker| %>
	<tr>
		<td><%= worker.email %></td>
		<td><%= worker.nickname %></td>
		<td>
			<% if worker.role %>
				<%= worker.role.name %>
			<% end %>
		</td>
		<td><%= link_to 'Show', admin_worker_path(worker.id) %></td>
		<td><%= link_to 'Edit', edit_admin_worker_path(worker) %></td>
		<td><%= link_to 'Destroy', admin_worker_path(worker), method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>
	<% end %>
</table>

<%= link_to 'Create new worker', new_admin_worker_path %>

