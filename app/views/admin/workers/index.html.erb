<h1>Сотрудники</h1>
<table border="1">
	<tr>
		<th>Email</th>
		<th>Имя</th>
		<th>Должность</th>
		<th colspan="3">Действия</th>
	</tr>
	<% @workers.each do |worker| %>
	<tr>
		<td><%= worker.email %></td>
		<td><%= worker.nickname %></td>
		<td>
			<% if worker.role %>
				<%= worker.role.name %>
			<% end %>
		</td>
		<td><%= link_to 'Смотреть', admin_worker_path(worker.id) %></td>
		<td><%= link_to 'Редактировать', edit_admin_worker_path(worker) %></td>
		<td><%= link_to 'Удалить', admin_worker_path(worker), method: :delete, data: { confirm: 'Вы уверены?' } %></td>
	</tr>
	<% end %>
</table>

<%= link_to 'Создать нового сотрудника', new_admin_worker_path %>

