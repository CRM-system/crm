<%= form_with model: [:admin, @worker], local: true do |f| %>
<% if @worker.errors.any? %>
<div class="errors">
	Total errors: <%= @worker.errors.count %>
	<ul>
		<% @worker.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>

<p>
	<%= f.label :nickname %><br/>
	<%= f.text_field :nickname %>
</p>

<p>
	<%= f.label :email %><br/>
	<%= f.text_field :email %>
</p>

<p>
	<%= f.label :password %><br/>
	<%= f.text_field :password %>
</p>

<p>
	<%= f.select :role_id, Role.all.collect { |p| [ p.name, p.id ] }, include_blank: true %>
</p>

<p>
	<%= f.submit %>
</p>
<% end %>