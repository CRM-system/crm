<h1>Должности</h1>
<% if current_worker.access_is_given?('role', 'new') %>
	<%= link_to 'Создать новую должность',new_admin_role_path, class:"ui positive basic button" %>
<% end %>
<table class="ui selectable celled table">
	<tr class="table_title">
		<th>Название</th>
		<th colspan="2">Действия</th>
	</tr>
	<% @roles.each do |role| %>
	<tr>
		<td>
			<h2>
				<%= link_to role.name, admin_role_path(role.id)%>
			</h2>
		</td>
		<td>
			<% if current_worker.access_is_given?('role', 'edit') %>
				<%= link_to edit_admin_role_path(role), id: "role-edit-#{role.id}" do %>
					<i class="large edit icon"></i>
				<% end %>
			<% end %>
		</td>
		<td>
			<% if current_worker.access_is_given?('role', 'destroy') %>
				<%= link_to admin_role_path(role), method: :delete, id: "role/#{role.id}", data: { confirm: 'Вы уверены?' } do %>
					<i class="circular inverted red trash alternate outline icon"></i>
				<% end %>
			<% end %>
		</td>
	</tr>
	<% end %>
</table>
