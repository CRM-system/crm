<h1>Должности</h1>
<table border="1">
	<tr>
		<th>Name</th>
		<th colspan="3">Action</th>
	</tr>
	<% @roles.each do |role| %>
	<tr>
		<td><%= role.name %></td>
		<td><%= link_to 'Show', admin_role_path(role.id) %></td>
		<td><%= link_to 'Edit', edit_admin_role_path(role) %></td>
		<td><%= link_to 'Destroy', admin_role_path(role), method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>
	<% end %>
</table>

<%= link_to 'Create new role',   new_admin_role_path %>
