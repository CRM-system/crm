<h1>Обработка заказа</h1>

<div class="ui form">
  <div class="fields">
    <%= form_with model: [:admin, @order], local: true do |f| %>
      <% if @order.errors.any? %>
        <div class="errors">
          Total errors: <%= @order.errors.count %>
          <ul>
            <% @order.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="field">
        <%= f.label 'Имя' %>
        <%= f.text_field :client_name %>
      </div>

      <div class="field">
        <%= f.label 'Номер телефона' %>
        <%= f.phone_field :client_phone %><br>
      </div>

      <div class="field">
        <%= f.label 'Email' %>
        <%= f.email_field :client_email, placeholder: 'Выяснить' %><br>
      </div>

      <div class="field">
        <%= f.label 'Адрес' %>
        <%= f.text_field :client_addres, placeholder: 'Выяснить' %><br>
      </div>

      <div class="field">
        <%= f.label 'Тип доставки' %>
        <%= f.text_field :delivery_type, placeholder: 'Выяснить' %><br>
      </div>

      <div class="field">
        <%= f.label 'Цена продукта' %>
        <%= f.number_field :order_price %><br>
      </div>

      <div class="field">
        <%= f.label 'Количество' %>
        <%= f.number_field :quantity, placeholder: 'Выяснить' %><br>
      </div><br>

      <div>
        <%= f.label 'Статус' %>
        <%= f.select( :status, options_for_select(current_worker.role.order_statuses.map{ |s| s.title }) ) %>
      </div>

      <div><br><br>
        <%= f.submit "Подтвердить", class:"ui teal button" %>
      </div>
    <% end %>
  </div>
<br><br>